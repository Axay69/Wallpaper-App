<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp">

    <!-- ImageView for category background -->
    <ImageView
        android:id="@+id/categoryImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:transitionName="categoryImageTransition" />

    <!-- TextView for category name with border effect -->
    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="8dp"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:shadowColor="#C8202324"

        android:text="Amoled"
        android:textColor="@color/bg_white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/sonsie_one_regular"
        android:transitionName="categoryTextTransition" />
</RelativeLayout>
